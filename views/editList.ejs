<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <main class="container">
      <form
        class="d-flex flex-column w-50 gap-2"
        action="/todos/edit/<%= trainees._id %>"
        method="POST"
      >
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= trainees.name %>" />
        <label for="profession">Profession</label>
        <input
          type="text"
          id="profession"
          name="profession"
          value="<%= trainees.profession %>"
        />
        <label for="description">Description</label>
        <textarea id="description" cols="30" rows="10" name="description">
<%= trainees.description  %></textarea
        >
        <button type="submit">Submit</button>
      </form>
    </main>
    <%- include('../partials/footer.ejs')%>
  </body>
</html>
